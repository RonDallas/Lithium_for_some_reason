   ,DLH C 1 offset(10, 55) lith_a_fistCharge;
   ,DLH C 1 offset(4, 40) lith_a_fistCharge;
   ,DLH C 1 offset(1, 34) lith_a_fistCharge;
   ,DLH C 1 offset(-1, 32) lith_a_fistCharge;
   ,DLH CCCCCCCCCCC 1 lith_a_fistCharge;
   ,DLH C 1 offset(-1, 40);
   ,DLH C 1 offset(-1, 50);
   ,DLH C 1 offset(-1, 70);
   ,DLH C 1 offset(-1, 90);
